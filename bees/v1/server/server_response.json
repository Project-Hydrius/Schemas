{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "server_response.json",
    "type": "object",
    "title": "Server Response",
    "description": "A server response schema",
    "deprecated": false,
    "properties": {
        "date": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp of the response (ISO 8601 format)",
            "examples": [
                "2025-09-05T15:30:00Z",
                "2025-11-20T14:25:15Z"
            ]
        },
        "request_type": {
            "type": "string",
            "description": "The type of server request that was made",
            "examples": [
                "SERVER_STATUS",
                "SERVER_RESTART"
            ]
        },
        "response_status": {
            "type": "string",
            "description": "The status of the response",
            "examples": [
                "OK",
                "ERROR"
            ]
        },
        "response_message": {
            "type": [
                "string",
                "null"
            ],
            "description": "Optional message providing context about the response",
            "examples": [
                "Server is running smoothly",
                "Server restart initiated"
            ]   
        }
    }
}