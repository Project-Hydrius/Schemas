{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "collection_definition.json",
    "type": "object",
    "title": "CollectionDefinition",
    "description": "A definition of a collection",
    "deprecated": false,
    "properties": {
        "label": {
            "type": "string",
            "description": "Label of the collection definition",
            "examples": [
                "island_collection"
            ]
        },
        "name": {
            "type": "string",
            "description": "Name of the collection definition",
            "examples": [
                "Island Collection"
            ]
        },
        "type": {
            "type": "string",
            "description": "Type of the collection definition",
            "examples": [
                "RESOURCE"
            ]
        },
        "description": {
            "type": "string",
            "description": "Description of the collection definition",
            "examples": [
                "Island Collection"
            ]
        },
        "entries": {
            "type": "array",
            "description": "Items of the collection definition",
            "items": {
                "type": "object"
            }
        }
    },
    "required": [
        "label"
    ]
}