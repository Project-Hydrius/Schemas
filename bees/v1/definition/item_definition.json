{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "item_definition.json",
    "type": "object",
    "title": "ItemDefinition",
    "description": "A definition of an item",
    "deprecated": false,
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique identifier for the item definition",
            "examples": [
                "BEASTMASTER_SWORD",
                "BEASTMASTER_AXE"
            ]
        },
        "category": {
            "type": "string",
            "description": "Category of the item definition",
            "examples": [
                "WEAPON",
                "TOOL"
            ]
        },
        "display_name": {
            "type": "string",
            "description": "Name of the item definition",
            "examples": [
                "Beastmaster Sword",
                "Beastmaster Axe"
            ]
        },
        "material": {
            "type": "string",
            "description": "Material of the item definition",
            "examples": [
                "minecraft:diamond_sword",
                "minecraft:diamond_axe"
            ]
        },
        "texture_url": {
            "type": [
                "string",
                "null"
            ],
            "description": "Texture URL of the item definition"
        },
        "custom_model_data": {
            "type": [
                "number",
                "null"
            ],
            "description": "Custom model data of the item definition",
            "examples": [
                1001,
                1002,
                1003
            ]
        },
        "tags": {
            "type": [
                "array",
                "null"
            ],
            "description": "Tags of the item definition",
            "examples": [
                [
                    "MATERIAL",
                    "WEAPON"
                ]
            ]
        },
        "statistics": {
            "type": [
                "array",
                "null"
            ],
            "description": "Statistics of the item definition",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "description": "Type of the statistic",
                        "examples": [
                            "HEALTH",
                            "ATTACK_SPEED"
                        ]
                    },
                    "value": {
                        "type": "number",
                        "description": "Value of the statistic",
                        "examples": [
                            100,
                            200
                        ]
                    }
                },
                "required": [
                    "type",
                    "value"
                ]
            }
        },
        "recipe": {
            "type": [
                "array",
                "null"
            ],
            "description": "Recipe of the item definition",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Unique identifier of the item recipe",
                        "examples": [
                            "RUSTY_SWORD",
                            "RUSTY_AXE"
                        ]
                    },
                    "material": {
                        "type": "string",
                        "description": "Material of the item recipe",
                        "examples": [
                            "minecraft:diamond_sword",
                            "minecraft:diamond_axe"
                        ]
                    },
                    "amount": {
                        "type": "integer",
                        "description": "Amount of the item recipe",
                        "minimum": 1,
                        "examples": [
                            1,
                            2
                        ]
                    },
                    "slot": {
                        "type": "integer",
                        "description": "Slot number of the item recipe",
                        "examples": [
                            1,
                            2
                        ]
                    }
                },
                "required": [
                    "amount",
                    "slot"
                ],
                "oneOf": [
                    {
                        "required": [
                            "id"
                        ]
                    },
                    {
                        "required": [
                            "material"
                        ]
                    }
                ]
            }
        }
    },
    "required": [
        "id",
        "category",
        "display_name",
        "material"
    ]
}