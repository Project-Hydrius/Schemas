{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "quest_definition.json",
    "type": "object",
    "title": "QuestDefinition",
    "description": "A definition of a quest",
    "deprecated": false,
    "properties": {
        "label": {
            "type": "string",
            "description": "Unique identifier for the quest definition",
            "examples": [
                "welcome_quest"
            ]
        },
        "collection_label": {
            "type": "string",
            "description": "Label of the collection this quest belongs to",
            "examples": [
                "welcome_collection"
            ]
        },
        "title": {
            "type": "string",
            "description": "Title of the quest",
            "examples": [
                "Meet the villagers"
            ]
        },
        "description": {
            "type": "string",
            "description": "Description of the quest",
            "examples": [
                "Say hello to your new neighbors."
            ]
        },
        "requirements": {
            "type": "object",
            "description": "Requirements needed to complete the quest"
        },
        "rewards": {
            "type": "object",
            "description": "Rewards given upon quest completion"
        }
    },
    "required": [
        "label",
        "collection_label",
        "title",
        "description",
        "rewards"
    ]
}