{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "dialogue_option_definition.json",
    "type": "object",
    "title": "DialogueOptionDefinition",
    "description": "A definition of a dialogue option",
    "deprecated": false,
    "properties": {
        "label": {
            "type": "string",
            "description": "Unique identifier for the dialogue option definition",
            "examples": [
                "getting_started_class_pick_option"
            ]
        },
        "dialogue_label": {
            "type": "string",
            "description": "Label of the dialogue this option belongs to",
            "examples": [
                "getting_started_class_pick_ask"
            ]
        },
        "text": {
            "type": "string",
            "description": "Text content of the dialogue option",
            "examples": [
                "What class are you?"
            ]
        },
        "action": {
            "type": "string",
            "enum": [
                "START_QUEST",
                "COMPLETE_QUEST",
                "NEXT_STAGE",
                "GIVE_ITEM"
            ],
            "description": "Action to be performed when this option is selected",
            "examples": [
                "START_QUEST"
            ]
        },
        "action_payload": {
            "type": "object",
            "description": "Payload data for the action"
        },
        "next_dialogue_label": {
            "type": "string",
            "description": "Label of the next dialogue after selecting this option",
            "examples": [
                "getting_started_class_pick_success"
            ]
        }
    },
    "required": [
        "label",
        "dialogue_label",
        "text",
        "action",
        "action_payload",
        "next_dialogue_label"
    ]
}