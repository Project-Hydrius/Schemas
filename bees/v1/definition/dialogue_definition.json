{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "dialogue_definition.json",
    "type": "object",
    "title": "DialogueDefinition",
    "description": "A definition of a dialogue",
    "deprecated": false,
    "properties": {
        "label": {
            "type": "string",
            "description": "Unique identifier for the dialogue definition",
            "examples": [
                "first_welcome"
            ]
        },
        "npc_label": {
            "type": "string",
            "description": "Label of the NPC associated with this dialogue",
            "examples": [
                "GUS"
            ]
        },
        "quest_label": {
            "type": "string",
            "description": "Label of the quest this dialogue belongs to",
            "examples": [
                "getting_started"
            ]
        },
        "stage_label": {
            "type": "string",
            "description": "Label of the quest stage this dialogue belongs to",
            "examples": [
                "getting_started_initial"
            ]
        },
        "text": {
            "type": "string",
            "description": "Text content of the dialogue",
            "examples": [
                "Hello! Welcome to town!"
            ]
        },
        "next_label": {
            "type": "string",
            "description": "Label of the next dialogue in the sequence",
            "examples": [
                "getting_started_class"
            ]
        }
    },
    "required": [
        "label",
        "npc_label",
        "text"
    ]
}