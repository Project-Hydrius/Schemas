{
	"$schema": "https://json-schema.org/draft-07/schema#",
	"$id": "player_response.json",
	"type": "object",
	"title": "PlayerResponse",
	"description": "A response object containing player data and associated metadata",
	"deprecated": false,
	"properties": {
		"date": {
			"type": "string",
			"format": "date-time",
			"description": "The date and time of the response, in ISO 8601 format",
			"readOnly": true,
			"examples": [
				"2025-09-05T15:30:00Z",
				"2025-07-18T11:35:20Z"
			]
		},
		"request_type": {
			"type": "string",
			"description": "The type of request that was made",
			"readOnly": true,
			"examples": [
				"PLAYER_GET",
				"PLAYER_DELETE"
			]
		},
		"response_status": {
			"type": "string",
			"description": "The status of the response",
			"readOnly": true,
			"examples": [
				"OK",
				"NOT_FOUND"
			]
		},
		"target_id": {
			"type": "string",
			"format": "uuid",
			"description": "The UUID of the target player",
			"readOnly": true,
			"examples": [
				"123e4567-e89b-12d3-a456-426614174000",
				"aaa11111-2222-3333-4444-555566667777"
			]
		},
		"response_message": {
			"type": [
				"string",
				"null"
			],
			"description": "Optional message providing context about the response",
			"readOnly": true,
			"examples": [
				"Player data retrieved successfully",
				"Player not found"
			]
		},
		"inventory": {
			"type": [
				"array",
				"null"
			],
			"description": "Array of inventory items",
			"readOnly": true,
			"items": {
				"$ref": "../inventory/inventory_item.json"
			}
		},
		"invitations": {
			"type": [
				"array",
				"null"
			],
			"description": "Array of invitations",
			"readOnly": true,
			"items": {
				"$ref": "../profile/profile_invitation.json"
			}
		}
	},
	"required": [
		"date",
		"request_type",
		"response_status",
		"target_id"
	],
	"additionalProperties": true
}